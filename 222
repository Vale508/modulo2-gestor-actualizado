/* ======== ESTILO GENERAL ======== */
body {
  margin: 0;
  font-family: "Poppins", sans-serif;
  background: linear-gradient(135deg, #0a0f24, #12263a, #1c4360);
  color: #fff;
  overflow-x: hidden;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  min-height: 100vh;
  padding-top: 120px; /* separa el contenido del topbar */
  box-sizing: border-box;
}

/* ======== TABLAS ======== */
.tabla-container {
  margin: 40px 280px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 20px;
  backdrop-filter: blur(10px);
-webkit-backdrop-filter: blur(10px);


  box-shadow: 0 0 25px rgba(0, 255, 255, 0.25);
  padding: 20px;
  transition: transform 0.3s ease;
}

.tabla-container:hover {
  transform: scale(1.02);
}

.tabla-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.tabla-header h3 {
  font-size: 1.5rem;
  background: linear-gradient(90deg, #00eaff, #00ff88);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.btn-agregar {
  background: linear-gradient(90deg, #00eaff, #00ff88);
  border: none;
  color: #000;
  font-weight: bold;
  padding: 10px 18px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
}

.btn-agregar:hover {
  transform: translateY(-3px);
  box-shadow: 0 0 25px rgba(0, 255, 255, 0.9);
}

.tabla {
  width: 100%;
  border-collapse: collapse;
  color: #fff;
  text-align: center;
}

.tabla th {
  background: rgba(0, 255, 255, 0.2);
  color: #00ffea;
  padding: 12px;
  border-bottom: 2px solid #00ffea;
  font-size: 1rem;
  letter-spacing: 1px;
}

.tabla td {
  padding: 10px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.15);
}

.tabla tr:hover {
  background: rgba(0, 255, 255, 0.1);
  transition: 0.3s ease;
}

/* ======== MODAL ======== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(10, 20, 40, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  backdrop-filter: blur(10px);
-webkit-backdrop-filter: blur(10px);

}

.modal {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 20px;
  padding: 40px;
  width: 420px;
  box-shadow: 0 0 40px rgba(0, 255, 255, 0.4);
  text-align: center;
  animation: popUp 0.5s ease;
}

@keyframes popUp {
  from {
    transform: scale(0.5);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal h3 {
  font-size: 1.8rem;
  background: linear-gradient(90deg, #00eaff, #00ff88);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 20px;
}

.modal input,
.modal select {
  width: 100%;
  padding: 12px;
  margin: 10px 0;
  border-radius: 10px;
  border: none;
  outline: none;
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.15);
  color: #fff;
  box-shadow: inset 0 0 10px rgba(0, 255, 255, 0.3);
  transition: 0.3s ease;
}

.modal input:focus,
.modal select:focus {
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.7);
  transform: scale(1.02);
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.btn-primary {
  background: linear-gradient(90deg, #00eaff, #00ff88);
  border: none;
  color: #000;
  font-weight: bold;
  padding: 10px 20px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  flex: 1;
  margin: 0 5px;
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
}

.btn-primary:hover {
  box-shadow: 0 0 25px rgba(0, 255, 255, 0.8);
  transform: translateY(-3px);
}

.btn-secondary {
  background: transparent;
  border: 2px solid #00ffea;
  color: #00ffea;
  font-weight: bold;
  padding: 10px 20px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  flex: 1;
  margin: 0 5px;
}

.btn-secondary:hover {
  background: rgba(0, 255, 255, 0.1);
  box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
}

/* ======== SELECT PERSONALIZADO ======== */
