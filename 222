  font-weight: 500;
  letter-spacing: 1px;
}

/* Opciones del select */
.modal select option {
  background: #0a0f24;
  color: #00ffea;
  font-weight: 500;
}

/* Al pasar el mouse */
.modal select:hover {
  box-shadow: 0 0 15px rgba(0, 255, 255, 0.6);
  transform: scale(1.03);
}

